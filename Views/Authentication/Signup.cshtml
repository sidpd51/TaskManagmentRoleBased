@model TaskManagmentRoleBased.Models.Employee

@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Signup Here!</h1>
                                </div>
                                <form class="user" method="post">
                                    <label class=" col-form-label">First Name</label>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.FirstName, "", new { @class = "form-control form-control-sm", placeholder = "John" })
                                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                    <label class=" col-form-label">Last Name</label>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.LastName, "", new { @class = "form-control form-control-sm", placeholder = "Doe" })
                                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                    </div>
                                    <label class=" col-form-label">Date of Birth</label>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.BirthDate, "", new { @class = "form-control form-control-sm", @type = "date" })
                                        @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger" })
                                    </div>
                                    <label class=" col-form-label">Email</label>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control form-control-sm", @type = "email", placeholder = "johnDoe123@gmail.com" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <label class=" col-form-label">Password</label>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Password, "", new { @class = "form-control form-control-sm", @type = "password" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <label class=" col-form-label">Gender</label>
                                    <div class="form-check form-check-primary">
                                        @Html.RadioButtonFor(m => m.Gender, "male", new { @class = "form-check-input", @checked = "checked" })
                                        <label class="form-check-label">
                                            Male
                                        </label>
                                    </div>
                                    <div class="form-check form-check-primary">
                                        @Html.RadioButtonFor(m => m.Gender, "female", new { @class = "form-check-input" })
                                        <label class="form-check-label">
                                            Female
                                        </label>
                                    </div>

                                    @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })

                                    <div class="mt-3 d-grid gap-2">
                                        <button type="submit" class="btn btn-block btn-primary  font-weight-medium auth-form-btn">SignUp</button>
                                    </div>
                                    <div class="text-center mt-3">
                                        @Html.ActionLink("Already have an Account!", "Login", new { @class = "small" })
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}